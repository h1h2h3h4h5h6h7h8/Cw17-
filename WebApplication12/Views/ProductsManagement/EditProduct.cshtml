@model ShopManagement.Domain.Entities.Product

<h2>Edit Product</h2>

<form asp-action="EditProduct" method="post">
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Quantity</label>
        <input asp-for="Qty" />
    </div>
    <div>
        <label>Category</label>
        <input asp-for="CategoryId" />
    </div>
    <button type="submit">Save</button>
</form>
